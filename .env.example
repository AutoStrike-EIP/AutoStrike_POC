# AutoStrike Environment Configuration
# Copy this file to .env and update values

# Server Configuration
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-here
AGENT_SECRET=your-secure-agent-secret-here

# Authentication
# Set to "false" to disable API authentication (development only!)
ENABLE_AUTH=true

# CORS Configuration
# Comma-separated list of allowed origins for WebSocket connections
# Default: http://localhost:3000,https://localhost:3000,http://localhost:8443,https://localhost:8443
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:8443,https://localhost:8443

# Database
DATABASE_PATH=./data/autostrike.db

# TLS Configuration
TLS_CERT_FILE=./certs/server.crt
TLS_KEY_FILE=./certs/server.key
TLS_CA_FILE=./certs/ca.crt

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
